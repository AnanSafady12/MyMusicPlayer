<Window x:Class="MyMusicPlayer.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song" Height="520" Width="820"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>

            <TextBlock Text="Edit Song" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

            <Grid Margin="0,0,0,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Artist:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Album:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Album, UpdateSourceTrigger=PropertyChanged}" Margin="0,8,0,0"/>
            </Grid>

            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="Images" FontWeight="Bold" DockPanel.Dock="Left"/>
                <Button Content="Add Image(s)" Command="{Binding AddImageCommand}" DockPanel.Dock="Right" Padding="10,4"/>
            </DockPanel>

            <ListBox ItemsSource="{Binding Images}" Height="230">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Margin="0,2">
                            <TextBlock Text="{Binding}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            <Button Content="Remove"
                                    Command="{Binding DataContext.RemoveImageCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    DockPanel.Dock="Right" Padding="10,2" Margin="10,0,0,0"/>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" Padding="18,6"/>
                <Button Content="Close" Padding="18,6" Margin="10,0,0,0" Click="Close_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
