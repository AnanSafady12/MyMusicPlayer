<Window x:Class="Player_Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Player_Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseDoubleClick="Window_MouseDoubleClick">

    <Grid>
        <ListBox Name="lstcolors"
                 Width="200"
                 Margin="30"
                 Background="AliceBlue"
                 SelectionChanged="lstcolors_SelectionChanged">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle Width="20"
                                   Height="20"
                                   Margin="4"
                                   Fill="{Binding Brush}" />

                        <TextBlock Text="{Binding Name}"
                                   VerticalAlignment="Center"
                                   Margin="6,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>

</Window>
